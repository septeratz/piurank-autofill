{
  "manifest_version": 3,
  "name": "PIURank Autofill Helper",
  "version": "0.1.0",
  "description": "PIUGame recent records data를 PIURank 입력 폼에 자동 반영하는 보조 확장 프로그램",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://piurank.com/*",
    "https://www.piurank.com/*",
    "https://piugame.com/*",
    "https://www.piugame.com/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "PIURank Autofill"
  },
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://piurank.com/*", "https://www.piurank.com/*"],
      "js": ["src/content/autofill.js"],
      "run_at": "document_idle"
    }
  ]
}
